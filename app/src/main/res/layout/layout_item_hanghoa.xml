<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        android:layout_gravity="center"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/my_gradient1"
            >

            <ImageView
                android:id="@+id/iv_hanghoa"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:paddingRight="12dp"
                android:scaleType="fitStart"/>

            <TextView android:textSize="25dp"
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lock_circle_open"
                android:text="  Mã hàng hóa: "
                android:layout_toRightOf="@+id/iv_hanghoa"
                android:textColor="?attr/colorError"
                android:textStyle="bold"
                />
            <TextView android:textSize="25dp"
                android:id="@+id/tv_idHanghoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv1"
                android:text="ID : 12345"
                android:textStyle="bold"/>

            <TextView android:textSize="18dp"
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/desktop"
                android:text="  Tên hàng hóa: "
                android:layout_toRightOf="@+id/iv_hanghoa"
                android:textColor="?attr/colorError"
                android:layout_below="@+id/tv1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_tenHanghoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_toRightOf="@+id/tv2"
                android:text="GTX 3060"
                android:textSize="18dp" />

            <TextView android:textSize="18dp"
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/informa"
                android:text="  Khối lượng: "
                android:layout_toRightOf="@+id/iv_hanghoa"
                android:textColor="?attr/colorError"
                android:layout_below="@+id/tv2"
                android:textStyle="bold"/>


            <TextView android:textSize="18dp"
                android:id="@+id/tv_khoiluongHH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv3"
                android:layout_below="@+id/tv2"
                android:text="0.5 kg" />

            <TextView android:textSize="18dp"
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/informa"
                android:text="  Số lượng tồn: "
                android:layout_toRightOf="@+id/iv_hanghoa"
                android:textColor="?attr/colorError"
                android:layout_below="@+id/tv3"
                android:textStyle="bold"/>

            <TextView android:textSize="18dp"
                android:id="@+id/tv_slTonHH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv4"
                android:layout_below="@+id/tv3"
                android:text="20 chiếc" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>