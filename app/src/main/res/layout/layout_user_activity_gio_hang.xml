<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserSite.activity.GioHangActivity"
    android:weightSum="10"> <!--chia tỉ lệ layout thành 10 phần-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarGioHang"
        android:background="#2196F3"
        app:title="Giỏ hàng"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical">
               <ImageView
                   android:id="@+id/imageviewEmptyCart"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/empty_cart"
                   android:layout_centerHorizontal="true"
                   android:scaleType="center"/>
               <TextView
                   android:id="@+id/txtViewThongBaoGioHangTrong"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bạn chưa có sản phẩm nào trong giỏ hàng"
                   android:textSize="18sp"
                   android:layout_gravity="center"
                   android:layout_below="@id/imageviewEmptyCart"
                   android:layout_centerHorizontal="true"/>
           </RelativeLayout>
            <ListView
                android:id="@+id/listViewGioHang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng"
                android:textSize="12sp"
                android:textColor="#201F1F"/>
            <TextView
                android:id="@+id/textViewTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textSize="20sp"
                android:textColor="#FF0000"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDatHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="Đặt Hàng"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="#EA3030"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTiepTucMuaSam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp tục mua sắm"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>